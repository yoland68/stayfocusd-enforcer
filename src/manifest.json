{
  "name": "Focus Enforcer",
  "short_name": "FE",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Enforce StayFocusd to be open",
  "browser_action": {
    "default_title": "Focus Enforcer",
    "default_icon": "icons/browser-action.png"
  },
  "background": {
      "scripts": ["js/background.js"],
      "persistent": false
  },
  "offline_enabled": true,
  "permissions": [
     "activeTab",
     "tabs",
     "chrome://*/"
  ]
}
